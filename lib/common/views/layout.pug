html 
  head 
    title Mintbean
    link(rel="stylesheet", href="/static/reset.css")
    link(rel="stylesheet", href="/static/base.css")
    link(rel="stylesheet", href="/static/utils.css")
    link(rel="stylesheet", href="/static/form.css")
    link(rel="stylesheet", href="/static/navbar.css")
  body
  div.flex.flex-col(style="width: 100%; height: 100%;")
    if flash
      if flash.success
        div(style="padding: 12px 48px; width: 100%; background-color: var(--green); color: white;") #{flash.success}
      if flash.error
        div(style="padding: 12px 48px; width: 100%; background-color: var(--red); color: white;") #{flash.error}
    div.section.navbar(style="padding: 24px 48px")
      div.flex.flex-row.gap-1
        h1.text-lg.bold(style="margin-bottom: 18px") Mintbean: 
        h2.text-lg.bold Hiring challenges for junior tech folks.
      div.links.flex.flex-row.gap-2
        a(href="/") Home
        a(href="/pages/discord") Chat
        if isLoggedIn
          a(href="/auth/logout") Logout
          a(href="/auth/profile") Profile
          if isAdmin
            a(href="/admin") Admin Panel
        else
          a(href="/auth/login") Login
    div(style="padding: 48px; flex-grow: 1; margin: auto; max-width: 900px; width: 100%;").section
        block content
    div(style="padding: 24px 48px; background-color: red;")
