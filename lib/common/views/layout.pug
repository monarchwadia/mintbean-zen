html 
  head 
    title Mintbean
    link(rel="stylesheet", href="/static/reset.css")
    link(rel="stylesheet", href="/static/base.css")
    link(rel="stylesheet", href="/static/utils.css")
    link(rel="stylesheet", href="/static/form.css")
  body
  div(style="width: 100%; height: 48px;")
    if flash
      if flash.success
        div(style="padding: 12px 48px; width: 100%; background-color: green; color: white;") #{flash.success}
      if flash.error
        div(style="padding: 12px 48px; width: 100%; background-color: red; color: white;") #{flash.error}
    div(style="padding: 48px; max-width: 800px")
      div.section
        h1.text-xl Mintbean
        h2.text-lg Hiring challenges for junior tech folks.
        div
          a(href="/") Home
          | |
          a(href="/guide") Guide
          | |
          a(href="/about") About
          | |
          a(href="/discord") Chat
          | |
          a(href="/employers") For Employers
          | |
          if isLoggedIn
            a(href="/auth/logout") Logout
            | |
            span #{currentUser.name}
          else
            a(href="/auth/login") Login
      div
        block content
      div
